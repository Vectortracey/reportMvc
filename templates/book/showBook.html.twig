{% extends 'base.html.twig' %}

{% block title %}{{ book.GetTitle() }}{% endblock %}
{% block content %}

<div>
    <img src="{{ book.getImage() }}" alt="{{ book.getTitle() }}" width="400">
    <div>
        <h2>{{ book.getTitle() }}</h2>
        <h5>{{ book.getAuthor() }}</h5>
        <p>ISBN: {{ book.getISBN() }}</p>
        <span class="hovertext" data-hover="Delete this book">
            <a href="{{ path('book_delete_by_id', {'id': book.getId()}) }}" class="symbol red">Remove</a>
        </span>
        <span class="hovertext" data-hover="Update this book">
            <a href="{{ path('update_book', {'id': book.getId()}) }}" class="symbol">Edit</a>
        </span>
    </div>
    </div>
     <form action="{{ url("show_all_books") }}">
        <input type="submit" class="btn" value="Return" />
    </form>
</div>
{% endblock %}
