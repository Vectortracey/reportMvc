{% include "incl/projheader.html.twig" %}
<body class="body-poker-color">
<h2 class="poker-title">Poker Texas hold'em</h2>
    <section class="poker-table">
    <div class="main-poker">
        <div class="dealer-section">
            <h2>Dealer</h2>
            <div class="dealer-cards poker-div-card deck poker-card">
                {% if board|length is same as 3 %}
                    {% set times = 2 %}
                    {% for i in range(1, times) %}
                        <div class="card-display backside"></div>
                    {% endfor %}
                {% else %}
                    {% for card in dealerHand %}
                        <div class="card-display {{card.getSuite}}">
                            <div class="value-left left-card">{{ card.getValue() }}</div>
                            <div class="suite-left left-card">{{ card.getSuite() }}</div>
                            <div class="suite-main main-{{ card.getSuite }} main-card">{{ card.getSuite() }}</div>
                            <div class="suite-right right-card">{{ card.getSuite() }}</div>
                            <div class="value-right right-card">{{ card.getValue() }}</div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <div class="board-section">
            <div class="dealer-cards poker-div-card deck poker-card board">
                {% for card in board %}
                    <div class="card-display {{card.getSuite}}">
                        <div class="value-left left-card">{{ card.getValue() }}</div>
                        <div class="suite-left left-card">{{ card.getSuite() }}</div>
                        <div class="suite-main main-{{ card.getSuite }} main-card">{{ card.getSuite() }}</div>
                        <div class="suite-right right-card">{{ card.getSuite() }}</div>
                        <div class="value-right right-card">{{ card.getValue() }}</div>
                    </div>
                {% endfor %}
                {% if board|length is same as 3 %}
                    {% set times = 2 %}
                    {% for i in range(1, times) %}
                        <div class="card-display backside"></div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        {% include "project/poker/flash-message.html.twig" %}
        <div class="player-section">
            <h2>Player</h2>
            <div class="player-middle">
                <div class="player-cards poker-div-card deck poker-card">
                    {% for card in playerHand %}
                        <div class="card-display {{card.getSuite}}">
                            <div class="value-left left-card">{{ card.getValue() }}</div>
                            <div class="suite-left left-card">{{ card.getSuite() }}</div>
                            <div class="suite-main main-{{ card.getSuite }} main-card">{{ card.getSuite() }}</div>
                            <div class="suite-right right-card">{{ card.getSuite() }}</div>
                            <div class="value-right right-card">{{ card.getValue() }}</div>
                        </div>
                    {% endfor %}
                </div>
                <form method="POST">
                <div class="pay-section">
                    {% if board|length is same as 5 %}
                        <div class="button-pay-div">
                            <div class="pokerchip blue"></div>
                        </div>
                        <div class="button-pay-div">
                            <div class="pokerchip blue"></div>
                        </div>
                    {% elseif playerHand|length is same as 2 %}
                        <div class="button-pay-div">
                            <div class="pokerchip blue"></div>
                        </div>
                        <input class="button-pay" type="submit" name="call" value="CALL">
                    {% elseif playerHand|length is same as 0 %}
                        <input class="button-pay" type="submit" name="ante" value="START">
                        <input class="button-pay" type="submit" name="call" value="CALL" disabled>
                    {% else %}
                        <input class="button-pay" type="submit" name="ante" value="START">
                        <input class="button-pay" type="submit" name="call" value="CALL">
                    {% endif %}
                </div>
                <div class="button-section">
                    {% if board|length is same as 5 %}
                        <input class="button-options" type="submit" name="fold" value="Start new game">
                    {% elseif playerHand|length is same as 2 %}
                    <input class="button-options" type="submit" name="fold" value="Fold">
                    {% else %}
                    {% endif %}
                </div>
                </form>
            </div>
        </div>
    </div>

        <div class="player-left">
            <div class="player-score-board">
                <h2>Player</h2>
                <div class="cards-score"></div>
                <h3>{{playerScore}}</h3>
            </div>
            <div class="balanceWinContainer">
                <div class="balance">
                    <h3>BALANCE</h3>
                    <p>{{balance}}</p>
                </div>
                <div class="win">
                    <h3>WIN</h3>
                    <p>{{winBalance}}</p>
                </div>
            </div>
        </div>

    </div>
    </section>

    {% include "incl/projfooter.html.twig" %}
</body>